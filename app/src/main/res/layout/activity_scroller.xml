<?xml version="1.0" encoding="utf-8"?>
<com.cn.dean.demo.scrollgroupdemo.scroll.ScrollViewGroup
    android:id="@+id/mScrollViewGroup"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark">

    <RelativeLayout android:id="@+id/centerView"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:background="@android:color/holo_orange_dark"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/centerView"
        android:layout_alignParentTop="true"
        android:background="@drawable/top_title_content_listview_bg_icon">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerHorizontal="true"
                  android:text="2016-05-27"
                  android:textColor="@android:color/white"/>

        <ImageView android:layout_width="16dp"
                   android:layout_height="16dp"
                   android:layout_marginLeft="8dp"
                   android:src="@drawable/menu_icon"/>

    </RelativeLayout>

    <View
        android:id="@+id/bottomView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/centerView"
        android:background="@android:color/darker_gray"/>

</com.cn.dean.demo.scrollgroupdemo.scroll.ScrollViewGroup>
